#!/bin/bash

rm -f im-last-restart.log
./im-restart > im-last-restart.log 2>&1

DEFAULT_INTEVAL_SECONDS=15
INTERVAL_SECONDS=${WATCH_INTERVAL:-$DEFAULT_INTEVAL_SECONDS}

while true; do
  sleep $INTERVAL_SECONDS

  ./im-check
  if [ $? -ne 0 ]; then
    ./im-restart > im-last-restart.log 2>&1
  fi
done



#!/bin/bash

# Make easy remote install from github
echo "Installing provisioning scripts to $(pwd)"

git clone https://github.com/immutables/provisioning.git
cp -rf ./provisioning/bin/* ./
rm -rf ./provisioning

. ./-im-git-vars

# writing configuration branch to be used in im-configuration-reset
echo $GIT_CONFIGURATION_BRANCH>cat-configuration-branch

./im-reset

echo "Installed TW with configuration: $CONFIGURATION_BRANCH"
echo '<<<'